<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/install"
    >
    <TextView
    	android:typeface="monospace"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="120dip"
    	android:layout_marginTop="70dip"
    	android:paddingRight="10dip"
    	android:text="This is a home-screen widget. To Install, press Menu -> Add -> Widget in Home Screen"
    	android:textColor="#000"
    	android:textSize="18dip"
    	/>
   	<TextView
    	android:typeface="monospace"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="120dip"
    	android:layout_marginTop="10dip"
    	android:paddingRight="10dip"
    	android:text="You can also get the respective wallpaper by clicking the button below"
    	android:textColor="#000"
    	android:textSize="12dip"
    	/>
	<Button android:text="Get Wallpaper" 
		android:layout_marginLeft="120dip"
    	android:layout_marginTop="10dip"	
		android:id="@+id/btnGetWallpaper"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
	</Button>
</LinearLayout>
